@page 
@using tinyidp.Business.BusinessEntities
@using tinyidp.Pages.Models
@model CreateKidModel
@{
    ViewData["Title"] = "Add new Key";
}
<script>
    function show() {
        /* Get image and change value 
        of src attribute */
        let div = document.getElementById("add-block");
        let img = document.getElementById("add-img-block");
        if (div.style.display == "block") {
            div.style.display = "none";
            img.src = "/images/right-triangle.png";
        }
        else {
            div.style.display = "block";
            img.src = "/images/bottom-triangle.png";
        }
    }
</script>
<h1>@ViewData["Title"]</h1>
<div id="error">
    <span class="error">
@if (Model._kidCreate != null && Model._kidCreate!.ExceptionMessage != null)
{    
    @Model._kidCreate!.ExceptionMessage
}
    </span>
</div>

@if (Model._kidCreate != null && Model._kidCreate!.CanAccess)
{

<h3>Add credential</h3>
<div id="add-block" class="shadowbox">
<form method="post">
    <table>
    <tr>
    <td>
        <label for="Algo">Algo</label>
    </td>
    <td>
        <div class="form-group"> 
        <select asp-for="_kidCreate!.Algo" asp-items="Html.GetEnumSelectList<AlgoType>()">
            <option value="">Choose algo</option>
        </select>
        <span asp-validation-for="_kidCreate!.Algo" class="text-danger"></span>
        </div>
    </td>
    </tr>

    <tr>
    <td>
        <label for="KID">KID (non mandatory)</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_kidCreate!.Kid" />
        </div>
    </td>
    </tr>
    <tr>
    <td colspan="2">
        <input type="submit" value="Create"/>
    </td>
    </tr>
    </table>
</form>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}