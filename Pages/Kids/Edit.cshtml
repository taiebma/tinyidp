@page 
@using tinyidp.Business.BusinessEntities
@using tinyidp.Pages.Models
@model KidEdit
@{
    ViewData["Title"] = "Key Managment";
}
<script>
    function show() {
        /* Get image and change value 
        of src attribute */
        let div = document.getElementById("add-block");
        let img = document.getElementById("add-img-block");
        if (div.style.display == "block") {
            div.style.display = "none";
            img.src = "/images/right-triangle.png";
        }
        else {
            div.style.display = "block";
            img.src = "/images/bottom-triangle.png";
        }
    }
</script>
<h1>@ViewData["Title"]</h1>
<div id="error">
    <span class="error">
@if (Model._kidEdit != null && Model._kidEdit!.ExceptionMessage != null)
{    
    @Model._kidEdit!.ExceptionMessage
}
    </span>
</div>

@if (Model._kidEdit != null && Model._kidEdit!.CanAccess)
{

<h3>Edit credential</h3>
<div id="add-block" class="shadowbox">
<form method="post">
    <table>
    <tr>
    <td>
        <label for="Id">Id</label>
    </td>
    <td>
        @Html.DisplayFor(model => model._kidEdit!.Id)
        <input type="hidden" asp-for="_kidEdit!.Id"/>
    </td>
    </tr>
    <tr>
    <td>
        <label for="KID">KID</label>
    </td>
    <td>
        @Html.DisplayFor(model => model._kidEdit!.Kid)
        <input type="hidden" asp-for="_kidEdit!.Kid"/>
    </td>
    </tr>
    <tr>
    <td>
        <label for="Algo">Algo</label>
    </td>
    <td>
        @Html.DisplayFor(model => model._kidEdit!.Algo)
        <input type="hidden" asp-for="_kidEdit!.Algo" class="form-control"/>
    </td>
    </tr>
    <tr>
    <td>
        <label for="State">State</label>
    </td>
    <td>
        <div class="form-group"> 
        <select asp-for="_kidEdit!.State" asp-items="Html.GetEnumSelectList<KidState>()">
            <option value="">Choose a State</option>
        </select>
        <span asp-validation-for="_kidEdit!.State" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="CreationDate">Creation Date </label>
    </td>
    <td>
        <div class="form-group">
        @Html.DisplayFor(model => model._kidEdit!.CreationDate)
        <input stype="hidden" asp-for="_kidEdit!.CreationDate" class="form-control"/>
        </div>
    </td>
    </tr>
    <tr>
    <td colspan="2">
            <input type="submit" value="Update"/>
    </td>
    </tr>
    </table>
</form>
</div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}