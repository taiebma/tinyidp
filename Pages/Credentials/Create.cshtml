@page 
@using tinyidp.Business.BusinessEntities
@using tinyidp.Pages.Models
@model CreateModel
@{
    ViewData["Title"] = "Credentials Managment";
}
<script>
    function show() {
        /* Get image and change value 
        of src attribute */
        let div = document.getElementById("add-block");
        let img = document.getElementById("add-img-block");
        if (div.style.display == "block") {
            div.style.display = "none";
            img.src = "/images/right-triangle.png";
        }
        else {
            div.style.display = "block";
            img.src = "/images/bottom-triangle.png";
        }
    }
</script>
<h1>@ViewData["Title"]</h1>
<div id="error">
    <span class="error">
@if (Model._credentialCreate != null && Model._credentialCreate!.ExceptionMessage != null)
{    
    @Model._credentialCreate!.ExceptionMessage
}
    </span>
</div>

@if (Model._credentialCreate != null && Model._credentialCreate!.CanAccess)
{
<h3>Add credential</h3>
<div id="add-block" class="shadowbox">
<form method="post">
    <table>
    <tr>
    <td>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label for="Ident">Ident</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_credentialCreate!.Ident" class="form-control"/>
        <span asp-validation-for="_credentialCreate!.Ident" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="Password">Password</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_credentialCreate!.Pass" class="form-control"/>
        <span asp-validation-for="_credentialCreate!.Pass" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="State">State</label>
    </td>
    <td>
        <div class="form-group"> 
        <select asp-for="_credentialCreate!.State" asp-items="Html.GetEnumSelectList<StateCredential>()">
            <option value="">Choose a State</option>
        </select>
        <span asp-validation-for="_credentialCreate!.State" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="RoleIdent">Role</label>
    </td>
    <td>
        <div class="form-group">
        <select asp-for="_credentialCreate!.RoleIdent" asp-items="Html.GetEnumSelectList<RoleCredential>()">
            <option value="">Choose a Role</option>
        </select>
        <span asp-validation-for="_credentialCreate!.RoleIdent" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="NbMaxRenew">Nb max nenew</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_credentialCreate!.NbMaxRenew" class="form-control"/>
        <span asp-validation-for="_credentialCreate!.NbMaxRenew" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="TokenMaxMinuteValidity">Max validity of token in min</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_credentialCreate!.TokenMaxMinuteValidity" class="form-control"/>
        <span asp-validation-for="_credentialCreate!.TokenMaxMinuteValidity" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
        <label for="RefreshMaxMinuteValidity">Max validity of refresh token in min</label>
    </td>
    <td>
        <div class="form-group">
        <input asp-for="_credentialCreate!.RefreshMaxMinuteValidity" class="form-control"/>
        <span asp-validation-for="_credentialCreate!.RefreshMaxMinuteValidity" class="text-danger"></span>
        </div>
    </td>
    </tr>
    <tr>
    <td>
            <label for="Scopes">Allowed Scopes (white space separator)</label>
    </td>
    <td>
            <div class="form-group">
            <input asp-for="_credentialCreate!.AllowedScopes" class="form-control"/>
            <span asp-validation-for="_credentialCreate!.AllowedScopes" class="text-danger"></span>
            </div>
    </td>
    </tr>
    <tr>
    <td>
            <label for="Audiences">Audiences (white space separator)</label>
    </td>
    <td>
            <div class="form-group">
            <input asp-for="_credentialCreate!.Audiences" class="form-control"/>
            <span asp-validation-for="_credentialCreate!.Audiences" class="text-danger"></span>
            </div>
    </td>
    </tr>
    <tr>
    <td>
            <label for="RedirectUri">Redirect Uri</label>
    </td>
    <td>
            <div class="form-group">
            <input asp-for="_credentialCreate!.RedirectUri" class="form-control"/>
            <span asp-validation-for="_credentialCreate!.RedirectUri" class="text-danger"></span>
            </div>
    </td>
    </tr>
    <tr>
    <td colspan="2">
        <input type="submit" value="Create"/>
    </td>
    </tr>
    </table>
</form>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}